{
    "name": "nathanmac/responder",
    "description": "Simple PHP Responder Utility Library for API Development",
    "keywords": ["responder", "json", "xml", "API", "formatter"],
    "homepage": "https://github.com/nathanmac/Responder",
    "license": "MIT",
    "authors": [
        {
            "name": "Nathan Macnamara",
            "email": "hola@nathanmac.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/yaml": "^2.4|^3.0"
    },
    "require-dev": {
        "illuminate/support": "^5.0",
        "phpunit/phpunit": "4.*",
        "satooshi/php-coveralls": "0.6.*"
    },
    "autoload": {
        "psr-4": {
            "Nathanmac\\Utilities\\Responder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nathanmac\\Utilities\\Responder\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
